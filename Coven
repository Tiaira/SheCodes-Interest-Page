    <script>
      function visitToday() {
        let name = prompt("What is your full name?");
        let phone = prompt("What is your phone number?");
        let days = prompt("How many days do you plan to stay?");
        let h1 = document.querySelector("h1");
        h1.innerHTML =
          "‚öúÔ∏è <br /> Hi, " + name + ", we have you on the schedule!";
        if (days > 10) {
          alert(
            (h1.innerHTML =
              " ‚öúÔ∏è <br /> Hi, " + name + ", we have you on the schedule!")
          );
        } else {
          if (days < 9) {
            alert(
              (h1.innerHTML =
                "‚öúÔ∏è <br /> Sorry," +
                name +
                ", we're booked for the next 3 months. We will give you a call at " +
                phone +
                " when our schedule opens!")
            );
          }
        }
      }
      let contactButton = document.querySelector("button");
      contactButton = addEventListener("click", visitToday);
    </script>
